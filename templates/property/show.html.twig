{% extends 'base.html.twig' %}

{% block title %} Voir tous nos biens {% endblock %}

{% block body %}
<div class="jumbotron">
<div class="container mt-4">
    <h1>  {{ property.title }}</h1>

         
            
    <div class="row flex">
        <div class="col-md-4">
        <img src="{{ vich_uploader_asset(property, 'imageFile')}}" alt="card-img-top" style="width:90%; height:250px; margin-top:12px;">
        </div>
        <div class="col-md-4">
            <h1>  {{ property.title }}</h1>
            <h2> {{property.rooms}} piéces - {{property.surface}} m2</h2>
           <div class="text-primary" style="font-size:4rem; font-weight:bold;"> {{property.formattedPrice}} €</div>
           <a href="#" class="btn btn-primary"> Contacter l'agence </a>
        </div>
    </div>
    </div>
 <div class="container mt-4">
    <p> {{ property.description | nl2br }}</p>
    <div class="row">
        <div class="col-md-8">
        <h2> Caracteristiques </h2>
        <table class="table table-striped">
        <tr>
            <td>Surface habitable</td>
            <td> {{property.surface}} m2</td>
        </tr>
        <tr>
            <td>Piéces</td>
            <td> {{property.rooms}}</td>
        </tr>
        <tr>
            <td>Chambres</td>
            <td>{{ property.beedrooms}}</td>
        </tr>
        <tr>
            <td>Etages</td>
            <td>{{property.floor}}</td>
        </tr>
        <tr>
            <td>Chauffages</td>
            <td>{{ property.heat}} </td>
        </tr>
        </table>
        </div>
        
    </div>

 </div>
</div>
{% endblock %}
